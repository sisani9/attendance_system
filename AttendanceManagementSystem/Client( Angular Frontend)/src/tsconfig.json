{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [ "node_modules/@types" ],
    "lib": [ "es2017", "dom" ]
  },

  "paths": {
    "@services/*": [ "src/app/services/*" ]
  },

  "module": "esnext",
  "moduleResolution": "node",
  "target": "es2015",
  "lib": [ "es2018", "dom" ]
}, 
  }
